<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context="com.csform.android.uiapptemplate.UserProfileEditActivity">


        <com.csform.android.uiapptemplate.font.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:id="@+id/titleText"
            style="@style/TextViewAppearance.Display1"
            android:layout_marginBottom="10dp" />

        <com.csform.android.uiapptemplate.font.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewAppearance.Headline1"
            android:text="User"
            android:id="@+id/userText" />

        <com.csform.android.uiapptemplate.font.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewAppearance.Title1"
            android:text="Date posted"
            android:id="@+id/postedDateText" />

        <com.csform.android.uiapptemplate.font.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewAppearance.Headline1"
            android:text="Date to be done by"
            android:id="@+id/completedDateText" />

        <com.csform.android.uiapptemplate.font.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewAppearance.Body1"
            android:text="Description"
            android:id="@+id/descText"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <com.csform.android.uiapptemplate.font.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewAppearance.Title1"
            android:text="Compensation"
            android:id="@+id/compText" />

      <com.csform.android.uiapptemplate.font.RobotoTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/TextViewAppearance.Caption1"
          android:text="By clicking Do Favor/Accept Offer, you agree to release your phone number to the original poster."
          android:id="@+id/disclaimer" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do Favor/Accept Offer"
            android:id="@+id/acceptFavorButton"
            android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:id="@+id/buttonLayout">

        <com.csform.android.uiapptemplate.view.MaterialRippleLayout
            style="@style/RippleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            app:rippleColor="@color/main_color_grey_400" >

            <com.csform.android.uiapptemplate.font.RobotoTextView
                android:id="@+id/cancel"
                style="@style/ButtonStyle.RaisedEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@color/main_color_500"
                android:minWidth="112dp"
                android:text="@string/cancel"
                android:textColor="#fff" />
        </com.csform.android.uiapptemplate.view.MaterialRippleLayout>

        <com.csform.android.uiapptemplate.view.MaterialRippleLayout
          style="@style/RippleStyle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="3dp"
          app:rippleColor="@color/main_color_grey_400" >

           <com.csform.android.uiapptemplate.font.RobotoTextView
                android:id="@+id/saveChanges"
                style="@style/ButtonStyle.RaisedEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@color/main_color_500"
                android:minWidth="112dp"
                android:text="@string/saveChanges"
                android:textColor="#fff" />
           </com.csform.android.uiapptemplate.view.MaterialRippleLayout>
    </LinearLayout>
</LinearLayout>
